	keywords = {Drinking water, Accessibility, Self-reported, Water quality, Water quantity},
	file = {ScienceDirect Full Text PDF:files/222/Cassivi et al. - 2021 - Evaluating self-reported measures and alternatives.pdf:application/pdf;ScienceDirect Snapshot:files/223/S0048969720350452.html:text/html}
