	number = {8},
	journaltitle = {International Journal of Environmental Research and Public Health},
	shortjournal = {Int J Environ Res Public Health},
	author = {Bartram, Jamie and Brocklehurst, Clarissa and Fisher, Michael B. and Luyendijk, Rolf and Hossain, Rifat and Wardlaw, Tessa and Gordon, Bruce},
	urldate = {2020-08-19},
	date = {2014-08},
	pmid = {25116635},
	pmcid = {PMC4143854},
	file = {PubMed Central Full Text PDF:files/155/Bartram et al. - 2014 - Global Monitoring of Water Supply and Sanitation .pdf:application/pdf}
}

